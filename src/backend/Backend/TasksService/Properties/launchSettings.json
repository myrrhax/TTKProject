{
  "$schema": "https://json.schemastore.org/launchsettings.json",
  "profiles": {
    "TasksService (http)": {
      "commandName": "Project",
      "launchBrowser": true,
      "launchUrl": "swagger",
      "applicationUrl": "http://localhost:5062",
      "environmentVariables": {
 	 "ASPNETCORE_ENVIRONMENT": "Development",
  	"ConnectionStrings__DefaultConnection": "Host=localhost;Port=5433;Database=tasks_db;Username=postgres;Password=postgres"
	},
      "dotnetRunMessages": true
    },
    "TasksService (https)": {
      "commandName": "Project",
      "launchBrowser": true,
      "launchUrl": "swagger",
      "applicationUrl": "https://localhost:7097;http://localhost:5062",
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "dotnetRunMessages": true
    },
    "Docker (TasksService)": {
      "commandName": "Docker",
      "launchUrl": "swagger",
      "publishAllPorts": true,
      "useSSL": true,
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_HTTPS_PORTS": "8081",
        "ASPNETCORE_HTTP_PORTS": "8080"
      }
    }
  }
}
